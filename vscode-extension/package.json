{
    "name": "llamit",
    "displayName": "Llamit - AI Commit Messages",
    "description": "Generate semantic commit messages instantly using your local Ollama LLM. Fully local, no cloud, no API keys needed.",
    "version": "0.2.0",
    "publisher": "Crstian",
    "icon": "llamit.png",
    "license": "MIT",
    "galleryBanner": {
        "color": "#1e1e1e",
        "theme": "dark"
    },
    "qna": "marketplace",
    "badges": [
        {
            "url": "https://img.shields.io/badge/vibecoded-100%25-blueviolet",
            "href": "https://github.com/crstian19/llamit",
            "description": "Fully vibecoded with AI"
        }
    ],
    "author": {
        "name": "Cristian Gutierrez",
        "url": "https://github.com/crstian19"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/crstian19/llamit"
    },
    "homepage": "https://llamit.crstian.me",
    "bugs": {
        "url": "https://github.com/crstian19/llamit/issues"
    },
    "keywords": [
        "git",
        "commit",
        "ai",
        "ollama",
        "llm",
        "commit-message",
        "conventional-commits"
    ],
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "SCM Providers",
        "Machine Learning"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "llamit.generateCommit",
                "title": "Llamit: Generate Commit Message",
                "icon": "$(lightbulb-sparkle)"
            },
            {
                "command": "llamit.openSettings",
                "title": "Llamit: Open Settings"
            }
        ],
        "menus": {
            "scm/title": [
                {
                    "command": "llamit.generateCommit",
                    "when": "scmProvider == 'git'",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "Llamit",
            "properties": {
                "llamit.ollamaUrl": {
                    "type": "string",
                    "default": "http://localhost:11434/api/generate",
                    "description": "The URL for the Ollama '/api/generate' endpoint."
                },
                "llamit.model": {
                    "type": "string",
                    "default": "qwen3-coder:30b",
                    "description": "The Ollama model to use for generating commit messages."
                },
                "llamit.commitFormat": {
                    "type": "string",
                    "default": "conventional",
                    "enum": [
                        "conventional",
                        "angular",
                        "gitmoji",
                        "karma",
                        "semantic",
                        "google",
                        "custom"
                    ],
                    "enumDescriptions": [
                        "Conventional Commits format with type(scope): description",
                        "Angular commit format with strict type/scope rules",
                        "Gitmoji format with emoji prefixes",
                        "Karma commit format",
                        "Semantic commit format",
                        "Google commit format",
                        "Custom format using your own template"
                    ],
                    "description": "The commit message format to use."
                },
                "llamit.customFormat": {
                    "type": "string",
                    "default": "",
                    "editPresentation": "multilineText",
                    "markdownDescription": "Custom commit message format template. Only used when `#llamit.commitFormat#` is set to `custom`. Use placeholders like `<type>`, `<scope>`, `<description>` to guide the AI.",
                    "description": "Custom format template (only used when commitFormat is 'custom')."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTests.js",
        "test:unit": "mocha --require ts-node/register 'src/test/unit/**/*.test.ts'",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "@types/node": "18.x",
        "@types/mocha": "^10.0.6",
        "@types/sinon": "^17.0.3",
        "@types/glob": "^8.1.0",
        "@vscode/test-electron": "^2.3.9",
        "@vscode/vsce": "^2.22.0",
        "glob": "^10.3.10",
        "mocha": "^10.3.0",
        "sinon": "^17.0.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}